<header class="header" role="banner">
  <nav class="navbar">
    <div class="container">
      <div class="navbar-brand">
        <a class="navbar-item" href="{{or site.url (or siteRootUrl siteRootPath)}}"><img src="{{uiRootPath}}/img/logo.svg" alt="{{site.title}}"></a>
        <a class="navbar-item" href="https://developer.couchbase.com">Developer</a>
        {{#if (many site.components)}}
        <div class="navbar-item has-dropdown is-hoverable">
          <a class="navbar-link" href="{{page.component.url}}">{{{drop-prefix page.component.title 'Couchbase '}}}</a>
          <div class="navbar-dropdown">
            {{#each site.components}}
            <a class="navbar-item" href="{{relativize @root.page.url ./url}}">{{{./title}}}</a>
            {{/each}}
          </div>
        </div>
        {{else}}
        <a class="navbar-item" href="{{relativize page.url page.component.url}}">{{{drop-prefix page.component.title 'Couchbase '}}}</a>
        {{/if}}
        <button class="navbar-burger" data-target="topbar-nav">
          <span></span>
          <span></span>
          <span></span>
        </button>
      </div>
      <div id="topbar-nav" class="navbar-menu">
        <div class="navbar-start">
          <a class="navbar-item" href="https://developer.couchbase.com/">Docs</a>
          <a class="navbar-item" href="http://training.couchbase.com/">Training</a>
          <a class="navbar-item" href="https://forums.couchbase.com/">Forums</a>
          <a class="navbar-item" href="https://developer.couchbase.com/guides-and-references">Site Map</a>
        </div>
        <div class="navbar-end">
          <div class="navbar-item">
            <a class="button" href="https://developer.couchbase.com/downloads#couchbase-server">Download</a>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>
