<header class="header">
  <nav class="navbar" id="topbar">
    <div class="container">
      <div class="navbar-brand">
        <a class="navbar-item" href="https://www.couchbase.com"><img src="{{uiRootPath}}/img/logo.svg" alt="Couchbase"></a>
        <button class="navbar-burger" data-target="topbar-menu">
          <span></span>
          <span></span>
          <span></span>
        </button>
      </div>
      <div id="topbar-menu" class="navbar-menu">
        <div class="navbar-start">
          <div class="navbar-item has-dropdown">
            <a class="navbar-link" href="{{or site.url (or siteRootUrl siteRootPath)}}">Docs</a>
            <div class="navbar-dropdown explore">
              <div class="title">Couchbase Documentation Overview</div>
              <div class="cols">
                <ul>
                  <li class="heading"><a href="{{siteRootPath}}/server/5.5/introduction/intro.html">Server</a></li>
                  <li><a href="{{siteRootPath}}/server/5.5/n1ql/n1ql-language-reference/index.html">N1QL</a></li>
                  <li><a href="{{siteRootPath}}/server/5.5/fts/full-text-intro.html">Full Text Search</a></li>
                  <li><a href="{{siteRootPath}}/server/5.5/analytics/introduction.html">Analytics <small>(Developer Preview)</small></a></li>
                  <li><a href="{{siteRootPath}}/server/5.5/eventing/eventing-overview.html">Eventing</a></li>
                  <li><a href="{{{relativize page.url site.components.operator.url}}}">Autonomous Operator</a></li>
                </ul>
                <ul>
                  <li class="heading">Mobile</li>
                  <li><a href="{{{relativize page.url site.components.couchbase-lite.url}}}">Lite</a></li>
                  <li><a href="{{{relativize page.url site.components.sync-gateway.url}}}">Sync Gateway</a></li>
                </ul>
                <ul class="two-cols">
                  <li class="heading"><a href="{{siteRootPath}}/server/5.5/sdk/overview.html">SDKs</a></li>
                  <li><a href="{{siteRootPath}}/c-sdk/2.8/start-using-sdk.html">C</a></li>
                  <li><a href="{{siteRootPath}}/dotnet-sdk/2.6/start-using-sdk.html">.NET</a></li>
                  <li><a href="{{siteRootPath}}/go-sdk/1.4/start-using-sdk.html">Go</a></li>
                  <li><a href="{{siteRootPath}}/java-sdk/2.6/start-using-sdk.html">Java</a></li>
                  <li><a href="{{siteRootPath}}/nodejs-sdk/2.5/start-using-sdk.html">Node.js</a></li>
                  <li><a href="{{siteRootPath}}/php-sdk/2.4/start-using-sdk.html">PHP</a></li>
                  <li><a href="{{siteRootPath}}/python-sdk/2.4/start-using-sdk.html">Python</a></li>
                </ul>
                <ul>
                  <li class="heading"><a href="{{siteRootPath}}/server/5.5/connectors/intro.html">Connectors</a></li>
                  <li><a href="{{{relativize page.url site.components.elasticsearch-connector.url}}}">Elasticsearch</a></li>
                  <li><a href="{{siteRootPath}}/server/5.5/connectors/hadoop-1.2/hadoop.html">Hadoop</a></li>
                  <li><a href="{{{relativize page.url site.components.kafka-connector.url}}}">Kafka</a></li>
                  <li><a href="{{{relativize page.url site.components.spark-connector.url}}}">Spark</a></li>
                  <li><a href="{{{relativize page.url site.components.talend-connector.url}}}">Talend</a></li>
                  <li><a href="{{siteRootPath}}/server/5.5/connectors/odbc-jdbc-drivers.html">ODBC/JDBC</a></li>
                </ul>
              </div>
            </div>
          </div>
          {{#if (and page.component (ne page.component.name 'home'))}}
          {{#if (or page.versions (ends-with page.component.name '-sdk'))}}
          <div class="navbar-item has-dropdown">
            <a class="navbar-link component" href="{{{relativize page.url page.componentVersion.url}}}"><span class="title">{{{page.component.title}}}</span> <span class="version">{{page.componentVersion.displayVersion}}</span></a>
            <div class="navbar-dropdown versions">
              <div class="cols">
                <ul>
                  {{#each page.versions}}
                  {{#unless (eq ./version @root.page.version)}}
                  <li><a class="navbar-item" href="{{{relativize @root.page.url ./url}}}">{{{@root.page.component.title}}} {{./displayVersion}}</a></li>
                  {{/unless}}
                  {{/each}}
                </ul>
                {{#if (ends-with page.component.name '-sdk')}}
                <ul class="related">
                  {{#each (related-sdk-pages page.component.name page.url 'c-sdk/2.8,dotnet-sdk/2.6,go-sdk/1.4,java-sdk/2.6,nodejs-sdk/2.5,php-sdk/2.4,python-sdk/2.4')}}
                  <li><a class="navbar-item" href="{{{relativize @root.page.url ./url}}}">{{./title}}</a></li>
                  {{/each}}
                </ul>
                {{/if}}
              </div>
            </div>
          </div>
          {{else}}
          <a class="navbar-item component" href="{{{relativize page.url page.componentVersion.url}}}"><span class="title">{{{page.component.title}}}</span>{{#unless (eq page.componentVersion.displayVersion 'master')}} <span class="version">{{page.componentVersion.displayVersion}}</span>{{/unless}}</a>
          {{/if}}
          {{/if}}
          {{#if env.ALGOLIA_API_KEY}}
          <form class="navbar-item search">
            <input type="text" placeholder="Search Couchbase Docs" class="query" id="search-query">
            <button class="search"><span>Search</span></button>
          </form>
          {{/if}}
        </div>
        <div class="navbar-end">
          <div class="navbar-item">
            <a class="btn red-btn" href="https://www.couchbase.com/downloads">Downloads</a>
          </div>
        </div>
      </div>
    </div>
  </nav>
</header>
